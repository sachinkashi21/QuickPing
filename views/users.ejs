<%layout("layout/boilerplate.ejs")%>

<div class="user-list container px-0">
    <h4 class="text-dark mb-4">Users</h4>
    <% for(let user of allUsers) { %>
        <div class="user-row d-flex align-items-center border-bottom py-3 px-2">
            <div class="user-avatar me-3">
                <img src="<%= user.avatar %>" alt="User Avatar" class="rounded-circle border" style="width: 50px; height: 50px; object-fit: cover;">
            </div>
            <div class="user-info flex-grow-1">
                <h6 class="mb-1 text-dark fw-bold"><%= user.username %></h6>
                <p class="mb-0 text-muted small"><%= user.bio %></p>
            </div>
            <div>
                <a href="/chats/<%= user.id %>" class="btn btn-outline-dark btn-sm">Chat</a>
            </div>
        </div>
    <% } %>

    <h4 class="text-dark mt-5 mb-4">Groups</h4>
    <% for(let group of allGroups) { %>
        <div class="group-row d-flex align-items-center border-bottom py-3 px-2">
            <div class="group-avatar me-3">
                <img src="<%= group.avatar %>" alt="Group Avatar" class="rounded-circle border" style="width: 50px; height: 50px; object-fit: cover;">
            </div>
            <div class="group-info flex-grow-1">
                <h6 class="mb-1 text-dark fw-bold"><%= group.name %></h6>
                <p class="mb-0 text-muted small"><%= group.bio %></p>
            </div>
            <div>
                <a href="/chats/<%= group.id %>" class="btn btn-outline-dark btn-sm">Chat</a>
            </div>
        </div>
        <% } %>
    </div>
    <form action="/group" method="get" class="my-3 d-flex justify-content-center">
        <button class="btn btn-dark px-4 py-2 rounded-pill">Create a Group</button>
    </form>
