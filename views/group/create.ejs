<% layout("layout/boilerplate.ejs")%>

<div class="container mt-4">
    <h3>Create Group</h3>
    <form method="POST" action="/group" class="mt-4">
        <!-- Group Name -->
        <div class="mb-3">
            <label for="groupName" class="form-label">Group Name</label>
            <input type="text" id="groupName" name="groupName" class="form-control" placeholder="Enter Group Name" required>
        </div>

        <!-- User List -->
        <div class="user-list container mt-3">
            <h5>Select Members</h5>
            <% for(let user of users) { %>
                <div class="user-row d-flex align-items-center border-bottom py-3">
                    <!-- Checkbox for Selecting User -->
                    <div class="form-check me-3">
                        <input class="form-check-input" type="checkbox" name="selectedUsers" value="<%= user.id %>" id="user<%= user.id %>">
                    </div>

                    <!-- User Info -->
                    <div class="user-avatar me-3">
                        <img src="<%= user.avatar %>" alt="User Avatar" class="rounded-circle" style="width: 40px; height: 40px;">
                    </div>
                    <div class="user-info flex-grow-1">
                        <label for="user<%= user.id %>" class="mb-1">
                            <h6 class="mb-1">@<%= user.username %></h6>
                            <p class="mb-0 text-muted"><%= user.bio %></p>
                        </label>
                    </div>
                </div>
            <% } %>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary mt-4">Create Group</button>
    </form>
</div>

